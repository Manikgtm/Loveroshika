    <button id="accept-btn" onclick="showFinale()">Will You Be Mine?</button>
    <div id="finale"></div>

    <script>
        // Rose petals falling
        function createPetal() {
            const petal = document.createElement('div');
            petal.className = 'petal';
            petal.innerHTML = 'üåπ';
            petal.style.left = `${Math.random() * 100}vw`;
            petal.style.animationDuration = `${3 + Math.random() * 3}s`;
            document.getElementById('petals').appendChild(petal);
            setTimeout(() => petal.remove(), 6000);
        }
        setInterval(createPetal, 300);

        // Finale with fireworks
        function showFinale() {
            const finale = document.getElementById('finale');
            finale.style.display = 'flex';
            document.getElementById('accept-btn').style.display = 'none';
            document.getElementById('proposal').style.display = 'none';
            document.getElementById('heart').style.display = 'none';

            // Fireworks
            for (let i = 0; i < 30; i++) {
                const firework = document.createElement('span');
                firework.className = 'firework';
                firework.innerHTML = 'üíñ';
                firework.style.left = `${Math.random() * 100}vw`;
                firework.style.top = `${Math.random() * 100}vh`;
                finale.appendChild(firework);
                setTimeout(() => firework.remove(), 2000);
            }

            // Final message
            setTimeout(() => {
                finale.innerHTML = `
                    <div>Roshika, my heart sings for you!</div>
                    <div style="font-size: 60px; margin-top: 20px;">I Love You Forever! ‚ù§Ô∏è</div>
                `;
            }, 2500);
        }
    </script>
