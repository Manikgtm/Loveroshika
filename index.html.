    <button id="accept-btn" onclick="showFinale()">Say Yes</button>
    <div id="finale"></div>

    <script>
        function showFinale() {
            const finale = document.getElementById('finale');
            finale.style.display = 'flex';
            document.getElementById('accept-btn').style.display = 'none';
            let hearts = '';
            for (let i = 0; i < 50; i++) {
                const heart = document.createElement('span');
                heart.innerHTML = '❤️';
                heart.style.position = 'absolute';
                heart.style.left = `${Math.random() * 100}vw`;
                heart.style.top = `${Math.random() * 100}vh`;
                heart.style.animation = `fall ${2 + Math.random() * 3}s linear`;
                finale.appendChild(heart);
            }
            setTimeout(() => {
                finale.innerHTML = '<span style="font-size: 50px; color: #ff69b4;">Roshika, you’ve made me the happiest! I love you! ❤️</span>';
            }, 3000);
        }

        const style = document.createElement('style');
        style.innerHTML = `
            @keyframes fall {
                0% { transform: translateY(-100vh); opacity: 1; }
                100% { transform: translateY(100vh); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
    </script>
